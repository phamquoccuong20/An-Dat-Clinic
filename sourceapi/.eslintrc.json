{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "indent": ["error", 4],
        "no-tabs": ["error", { "allowIndentationTabs": true }],        
        "class-methods-use-this": ["warn", { "enforceForClassFields": false }],
        "camelcase": ["error", { "properties": "never", "ignoreDestructuring": true }]
    }
}
